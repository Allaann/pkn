<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahFragment"
    android:background="@color/whiteblurred"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pictop"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="200dp"
                android:src="@drawable/header_bg" />
            <ImageView
                android:id="@+id/picleft"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/pichomeleft" />
            <ImageView
                android:id="@+id/picright"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="380dp"
                android:src="@drawable/pichomeright" />

            <EditText
                android:id="@+id/formTiket"
                android:layout_below="@+id/pic"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="number"
                android:hint="No. Tiket"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:fontFamily="@font/poppinssemi"
                android:textColor="#000"
                android:textSize="28dp"
                android:text="Tambah Laporan Baru" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/formKejadian"
                android:layout_below="@id/pic"
                android:layout_toRightOf="@+id/formTiket"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Kejadian"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formLokasi"
                android:layout_below="@+id/formKejadian"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textMultiLine"
                android:hint="Lokasi Kejadian"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formPetugas"
                android:layout_below="@+id/formLokasi"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Nama Petugas"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formPelapor"
                android:layout_below="@id/formLokasi"
                android:layout_toRightOf="@+id/formPetugas"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:fontFamily="@font/montserrat"
                android:hint="Nama Pelapor"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formTindak"
                android:layout_below="@+id/formPetugas"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="textPersonName"
                android:hint="Tindak Lanjut"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/formTanggal"
                android:layout_below="@+id/formTindak"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/radius_formwhite"
                android:elevation="5dp"
                android:inputType="date"
                android:hint="Tanggal"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"
                android:textColor="#000" />


            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/image_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/btnOpen"
                android:layout_below="@+id/formTanggal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_picimg"
                />

            <Button
                android:id="@+id/btnOpen"
                android:layout_below="@+id/formTanggal"
                android:layout_width="245dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/ic_image"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                android:alpha="0.90"
                android:layout_marginRight="30dp"
                android:background="@drawable/radius_formwhite"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:text="Pilih Gambar" />

            <Button
                android:id="@+id/btnKirim"
                android:layout_below="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/radius_btnaksen"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:text="KIRIM" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>