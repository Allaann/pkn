<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/picadd"
        />
    <TextView
        android:id="@+id/Kejadian"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="Kejadian"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Kejadian"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Lokasi -"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Kejadian"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/textLokasi"
        android:fontFamily="@font/montserrat"
        android:text="Lokasi"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLokasi"
        android:layout_marginLeft="200dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_marginTop="25dp"
        android:textColor="@color/accent2"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Lihat Lebih"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listLokasi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="No. Tiket -"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/listTiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLokasi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/textTiket"
        android:fontFamily="@font/montserrat"
        android:text="No. Tiket"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/listTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTiket"
        android:layout_marginLeft="5dp"
        android:textColor="@color/accent2"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/poppinssemi"
        android:text="Tanggal"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/whiteblurred"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>