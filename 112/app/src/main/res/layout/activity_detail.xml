<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="500dp"
        android:layout_height="550dp"
        android:src="@drawable/picdetail"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"

        android:src="@drawable/ic_bacwhite"
        />
    <TextView
        android:id="@+id/Tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/poppinssemi"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Detail Laporan"
        android:background="@color/darkt"/>


    <ImageView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-210dp"
        android:src="@drawable/picwave" />

    <TextView
        android:id="@+id/detailKejadian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Tittle"
        android:fontFamily="@font/poppins"
        android:textColor="#000"
        android:textSize="25dp"
        android:text="Kejadian" />
    <TextView
        android:id="@+id/textLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailKejadian"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Lokasi -"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLokasi"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="No. Tiket - "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/detailTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLokasi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/textTiket"
        android:fontFamily="@font/montserrat"
        android:text="No. Tiket"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/detailLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailKejadian"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/textLokasi"
        android:fontFamily="@font/montserrat"
        android:text="Lokasi"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/BoxPetugas"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/textTiket"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppinssemi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Petugas"
        android:textSize="30dp"
        android:background="@drawable/radius_box"
        android:elevation="5dp"
        />

    <TextView
        android:id="@+id/detailPetugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BoxPetugas"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/montserrat"
        android:text="Petugas"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:elevation="5dp"
        />

    <TextView
        android:id="@+id/BoxPelapor"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/textTiket"
        android:paddingTop="20dp"
        android:layout_toRightOf="@+id/BoxPetugas"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppinssemi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Pelapor"
        android:textSize="30dp"
        android:background="@drawable/radius_box"
        android:elevation="5dp"
        />


    <TextView
        android:id="@+id/detailPelapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BoxPetugas"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/montserrat"
        android:text="Pelapor"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:elevation="5dp"
        />

    <TextView
        android:id="@+id/Tindak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailPetugas"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinssemi"
        android:text="Tindak Lanjut"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailTindak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tindak"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. L"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/detailTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:drawablePadding="10dp"
        android:layout_below="@id/detailTindak"
        android:fontFamily="@font/poppins"
        android:textColor="@color/accent2"
        android:textSize="25dp"
        android:text="Tanggal" />

</RelativeLayout>